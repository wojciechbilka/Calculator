<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="calculator.MainWindowController">
    <VBox  alignment="CENTER" spacing="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10"
          AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
        </padding>
        <VBox styleClass="result" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="5" bottom="5" left="5" right="5"/>
            </padding>
            <Label fx:id="display" textAlignment="RIGHT" wrapText="true">
                Result
            </Label>
        </VBox>

        <GridPane hgap="2" vgap="2" gridLinesVisible="false" VBox.vgrow="ALWAYS">

            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" percentWidth="25"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" percentWidth="25"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" percentWidth="25"/>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" percentWidth="25"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS" percentHeight="20" fillHeight="true"/>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS" percentHeight="20" fillHeight="true"/>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS" percentHeight="20" fillHeight="true"/>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS" percentHeight="20" fillHeight="true"/>
                <RowConstraints valignment="CENTER" vgrow="ALWAYS" percentHeight="20" fillHeight="true"/>
            </rowConstraints>
            <Button fx:id="backspace"
                    onAction="#delete"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0">
                backspace
            </Button>
            <Button fx:id="clearEntry"
                    onAction="#clearEntry"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="1">
                CE
            </Button>
            <Button fx:id="clearAll"
                    onAction="#clearAll"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="2">
                C
            </Button>
            <Button fx:id="divide"
                    onAction="#operationPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="3">
                /
            </Button>
            <Button fx:id="seven"
                    onAction="#numberPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="0">
                7
            </Button>
            <Button fx:id="eight"
                    onAction="#numberPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="1">
                8
            </Button>
            <Button fx:id="nine"
                    onAction="#numberPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="2">
                9
            </Button>
            <Button fx:id="multiply"
                    onAction="#operationPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="3">
                *
            </Button>
            <Button fx:id="four"
                    onAction="#numberPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="0">
                4
            </Button>
            <Button fx:id="five"
                    onAction="#numberPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="1">
                5
            </Button>
            <Button fx:id="six"
                    onAction="#numberPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="2">
                6
            </Button>
            <Button fx:id="subtract"
                    onAction="#operationPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="3">
                -
            </Button>
            <Button fx:id="one"
                    onAction="#numberPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="0">
                1
            </Button>
            <Button fx:id="two"
                    onAction="#numberPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="1">
                2
            </Button>
            <Button fx:id="three"
                    onAction="#numberPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="2">
                3
            </Button>
            <Button fx:id="add"
                    onAction="#operationPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="3">
                +
            </Button>
            <Button fx:id="zero"
                    onAction="#numberPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="4"
                    GridPane.columnIndex="0">
                0
            </Button>
            <Button fx:id="comma"
                    onAction="#commaPressed"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="4"
                    GridPane.columnIndex="1">
                ,
            </Button>
            <Button fx:id="negate"
                    onAction="#negate"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="4"
                    GridPane.columnIndex="2">
                +/-
            </Button>
            <Button fx:id="equals"
                    onAction="#result"
                    GridPane.columnSpan="1"
                    GridPane.rowSpan="1"
                    GridPane.rowIndex="4"
                    GridPane.columnIndex="3">
                =
            </Button>
        </GridPane>
    </VBox>
</AnchorPane>

